<% include ../partials/header %>

<div class="container text-center" id="editContainer">
    <h1>Currently editing, <%=treat.title%></h1>
</div>

<div class="row">
    <div id="newForm" style="display:block;">
        <form action="/treats/<%=treat._id%>?_method=PUT" method="POST">
            
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="treat[title]" class="form-control" value="<%=treat.title%>" placeholder="Put the title of your treat here">
            </div>
            
            <div class="form-group">
                <label for="image">Image URL:</label>
                <input type="text" id="image" name="treat[image]" class="form-control" value="<%=treat.image%>" placeholder="Find an image address that looks like your treat (optional)">
            </div>
            
            <label>Priority:</label>
            <div class="form-group">
                <label class="radio-inline">
                  <input type="radio" name="treat[priority]" id="inlineRadio1" value="Red">   Red
                </label>
                <label class="radio-inline">
                  <input type="radio" name="treat[priority]" id="inlineRadio2" value="Yellow"> Yellow
                </label>
                <label class="radio-inline">
                  <input type="radio" name="treat[priority]" id="inlineRadio3" checked="checked" value="Green"> Green
                </label>
            </div>
            
            <div class="form-group">
                <label for="price">Reward:</label>
                <input type="number" id="price" name="treat[price]" value="<%=treat.price%>" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="special">Special:</label>
                <input type="text" id="special" name="treat[special]" value="<%=treat.special%>" placeholder="Special directions for treat here (optional)" class="form-control">
            </div>
            
            <div class="form-group">
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
            
        </form>
    </div>
</div>

<% include ../partials/footer %>