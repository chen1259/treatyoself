<% include ../partials/header %>

<div class="container text-center" id="editContainer">
    <h1>Currently editing, <%=daily.title%></h1>
</div>

<div class="row">
    <div id="newForm" style="display:block;">
        <form action="/dailies/<%=daily._id%>?_method=PUT" method="POST">
            
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="daily[title]" class="form-control" value="<%=daily.title%>" placeholder="Put the title of your daily here">
            </div>
            
            <div class="form-group">
                <label for="image">Image URL:</label>
                <input type="text" id="image" name="daily[image]" class="form-control" value="<%=daily.image%>" placeholder="Find an image address that looks like your daily (optional)">
            </div>
            
            <label>Priority:</label>
            <div class="form-group">
                <label class="radio-inline">
                  <input type="radio" name="daily[priority]" id="inlineRadio1" value="Red">   Red
                </label>
                <label class="radio-inline">
                  <input type="radio" name="daily[priority]" id="inlineRadio2" value="Yellow"> Yellow
                </label>
                <label class="radio-inline">
                  <input type="radio" name="daily[priority]" id="inlineRadio3" checked="checked" value="Green"> Green
                </label>
            </div>
            
            <div class="form-group">
                <label for="reward">Reward:</label>
                <input type="number" id="reward" name="daily[reward]" value="<%=daily.reward%>" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="penalty">Penalty:</label>
                <input type="number" id="penalty" name="daily[penalty]" value="<%=daily.penalty%>" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="special">Special:</label>
                <input type="text" id="special" name="daily[special]" value="<%=daily.special%>" placeholder="Special directions for daily here (optional)" class="form-control">
            </div>
            
            <div class="form-group">
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
            
        </form>
    </div>
</div>

<% include ../partials/footer %>